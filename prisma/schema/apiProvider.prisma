model ApiProvider {
  id          Int      @id @default(autoincrement())
  name        String   @unique  // Provider name (smmgen, growfollows, etc.)
  api_key     String   // Provider API Key
  login_user  String?  // Username for provider login
  login_pass  String?  // Password for provider login
  status      String   @default("inactive") // active, inactive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("providers")
  @@index([status])
  @@index([name])
}
